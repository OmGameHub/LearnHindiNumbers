<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.pandey.learnhindinumbers.MainActivity">

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/one"
            style="@style/ButtonStyle"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/one"
            android:text="@string/one"
            tools:text="@string/one" />

        <Button
            android:id="@+id/two"
            style="@style/ButtonStyle"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:background="@drawable/two"
            android:text="@string/two"
            tools:text="@string/two" />

        <Button
            android:id="@+id/three"
            style="@style/ButtonStyle"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/three"
            android:text="@string/three"
            tools:text="@string/three" />

        <Button
            android:id="@+id/four"
            style="@style/ButtonStyle"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:background="@drawable/four"
            android:text="@string/four"
            tools:text="@string/four" />

        <Button
            android:id="@+id/five"
            style="@style/ButtonStyle"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/five"
            android:text="@string/five"
            tools:text="@string/five" />

        <Button
            android:id="@+id/six"
            style="@style/ButtonStyle"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:background="@drawable/six"
            android:text="@string/six"
            tools:text="@string/six" />

        <Button
            android:id="@+id/seven"
            style="@style/ButtonStyle"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:background="@drawable/one"
            android:text="@string/seven"
            tools:text="@string/seven" />

        <Button
            android:id="@+id/eight"
            style="@style/ButtonStyle"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:background="@drawable/two"
            android:text="@string/eight"
            tools:text="@string/eight" />

        <Button
            android:id="@+id/nine"
            style="@style/ButtonStyle"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:background="@drawable/three"
            android:text="@string/nine"
            tools:text="@string/nine" />

        <Button
            android:id="@+id/ten"
            style="@style/ButtonStyle"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_row="5"
            android:layout_rowWeight="1"
            android:background="@drawable/four"
            android:text="@string/ten"
            tools:text="@string/ten" />

    </GridLayout>
</android.support.constraint.ConstraintLayout>
